{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "no-restricted-syntax": [
      "error",
      {
        "selector": "JSXAttribute[name.name='className'][value.type='Literal'][value.value=/\\b(?:flex|grid|text-|bg-|p-|m-|rounded|w-|h-)/]",
        "message": "Inline Tailwind classes detected. Move them into CSS module using @apply."
      }
    ]
  }
}
