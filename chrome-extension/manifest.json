{
  "manifest_version": 3,
  "name": "ClearTab Dashboard",
  "version": "1.0.0",
  "description": "A personal dashboard and productivity app that takes over your new tab page.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  }
}
