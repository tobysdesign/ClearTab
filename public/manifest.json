{
  "manifest_version": 3,
  "name": "Bye - Personal Dashboard",
  "version": "1.0.0",
  "description": "A personal dashboard and productivity app that takes over your new tab page",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "storage",
    "identity",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "*://*.bye.app/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["index.html", "*.js", "*.css", "fonts/*", "icons/*", "assets/*", "animations/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 