{
  "manifest_version": 3,
  "name": "ClearTab Dashboard",
  "version": "1.0.0",
  "description": "A personal dashboard and productivity app that takes over your new tab page.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["storage", "identity", "tabs"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:;"
  },
  "host_permissions": ["*://*.supabase.co/*"],
  "web_accessible_resources": [
    {
      "resources": [
        "_next/static/*/*",
        "_next/static/css/*",
        "_next/static/chunks/pages/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
