{
  "manifest_version": 3,
  "name": "Bye - Personal Dashboard",
  "version": "1.0.0",
  "description": "A personal dashboard and productivity app that takes over your new tab page",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["storage", "identity", "tabs"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["*://*.bye.app/*"],
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "extension-app/*",
        "*.js",
        "*.css",
        "fonts/*",
        "icons/*",
        "assets/*",
        "animations/*",
        "next/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
